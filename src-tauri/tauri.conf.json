{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OTP Bar",
  "version": "0.3.0",
  "identifier": "com.8gaU8.otp-bar",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "../index.html",
    "beforeBuildCommand": "",
    "frontendDist": "../index.html"
  },
  "app": {
    "windows": [
      {
        "title": "otp-bar",
        "visible": false,
        "width": 1,
        "height": 1
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "dmg",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
