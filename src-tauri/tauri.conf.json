{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OTP Bar",
  "version": "1.0.0",
  "identifier": "com.8gaU8.otp-bar",
  "app": {
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
